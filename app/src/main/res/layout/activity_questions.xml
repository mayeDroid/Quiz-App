<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#fbfef9"
    tools:context=".QuestionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/textVQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="#363a43"
            android:text="which country's flag is this?"
            android:textSize="22sp">
        </TextView>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_flag_of_nig">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/progressBarStyleHorizontal"
                android:minHeight="50dp"
                android:progress="0"
                android:indeterminate="false"
                android:max="11">
            </ProgressBar>

            <TextView
                android:id="@+id/textV_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="15dp"
                android:textColorHint="#363a43"
                android:text=""
                android:textSize="14sp">
            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/textV_option_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/options_background"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#7a8089"
            android:text="hello"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/textV_option_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/options_background"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#7a8089"
            android:text="hello"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/textV_option_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/options_background"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#7a8089"
            android:text="hello"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/textV_option_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/options_background"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#7a8089"
            android:text="hello"
            android:textSize="18sp">
        </TextView>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/options_background"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="18sp">
        </Button>

    </LinearLayout>

</ScrollView>